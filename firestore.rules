rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read the portfolio data
    match /portfolio/{projectId} {
      allow read: if true;
      // Only allow authenticated users (you) to write/edit/delete
      allow write, delete: if request.auth != null;
    }
    
    // NEW RULE: Allow anyone to read testimonials, but only you to write.
    match /testimonials/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // NEW: Allow public read for case studies
    match /case_studies/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}